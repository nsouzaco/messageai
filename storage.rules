rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile pictures - users can upload their own
    match /profile_pictures/{filename} {
      allow read: if true; // Anyone can read profile pictures
      allow write: if request.auth != null;
    }
    
    // Group pictures - any authenticated user can upload
    match /group_pictures/{filename} {
      allow read: if true; // Anyone can read group pictures
      allow write: if request.auth != null; // Any authenticated user can upload
    }
    
    // Message images - users can upload to conversations they're part of
    match /message_images/{conversationId}/{filename} {
      allow read: if true; // Anyone can read message images
      allow write: if request.auth != null;
    }
    
    // Message audio - users can upload to conversations they're part of
    match /message_audio/{conversationId}/{filename} {
      allow read: if true; // Anyone can read message audio
      allow write: if request.auth != null;
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

